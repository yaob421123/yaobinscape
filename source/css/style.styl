#header
  width: 300px
  height: 100%
  position: fixed
  left:0
  top: 0
  background-color:#fff
  animation:fadeInLeft 1s infinite 
  animation-iteration-count:1


@-webkit-keyframes fadeInLeft{
  0%{
    opacity: 0
    -webkit-transform: translateX(-100px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(0px)
  }
}
@-moz-keyframes fadeInLeft{
  0%{
    opacity: 0
    -webkit-transform: translateX(-100px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(0px)
  }
}
@-ms-keyframes fadeInLeft{
  0%{
    opacity: 0
    -webkit-transform: translateX(-100px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(0px)
  }
}
@keyframes fadeInLeft{
  0%{
    opacity: 0
    -webkit-transform: translateX(-100px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(0px)
  }
}


#header-title
  padding: 50px 0
  background-color: #1d1d1d

#header-title h3
  text-align: center
  margin:0 auto

#header-title h3 img
  border-radius: 100%

#header-title h1
  text-align: center
  margin-top: 10px

#header-title h1 a
  color:#fff
  font-size: 30px
  font-style:italic
  text-shadow:0 1px 3px rgba(0, 0, 0, 0.4), 0 0 30px rgba(0, 0, 0, 0.075)

#main-nav
  margin-top: 20px
#main-nav ul
  padding:0

#main-nav ul li
  text-align: center
  list-style-type:none

#main-nav ul li a 
  color:#666
  font-size: 20px
  display: block
  width: 100%
  height: 50px
  line-height: 50px


#main-nav ul li a:hover
  background-color: #f5f5f5

.outer
  position: absolute
  left: 300px
  right:0
  top: 0
  height: auto
  overflow: heidden

.footer
  position: absolute
  left:0
  bottom:30px
  width: 100%

#footer-info
  line-height: 20px
  color:#919191
  font-size: 12px
  text-align: center

#footer-info a
  color:#0090ff
  text-decoration:underline


#main
  padding: 2%

.archives-wrap
  padding: 2%
  background-color: #fff
  margin-bottom: 20px

.archive-year-wrap
  height: 50px
  line-height: 50px
  background-color: #f5f5f5
  border-left:3px solid #4bde7b

.archive-year
  margin-left: 20px
  color:#727272
  font-size: 18px

.archives
  padding:1% 0
  overflow: hidden

.archive-article
  width: 50%
  float:left

.archive-article-header
  padding:0 20px
  height:38px
  line-height:38px
  clear:both
  overflow: hidden



.archive-article-date
  float:left
  color:#dfdfdf
  margin-right: 15px
  display: blokc
  width: 60px
  text-align: right

.archive-article-header h1
  float:left


@-moz-keyframes fadeInRight{
  0%{
    opacity: 0.5
    -webkit-transform: translateX(0px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(20px)
  }
}
@-ms-keyframes fadeInRight{
  0%{
    opacity: 0.5
    -webkit-transform: translateX(0px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(20px)
  }
}
@-webkit-keyframes fadeInRight{
  0%{
    opacity: 0.5
    -webkit-transform: translateX(0px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(20px)
  }
}
@keyframes fadeInRight{
  0%{
    opacity: 0.5
    -webkit-transform: translateX(0px)
  }
  100%{
    opacity: 1
    -webkit-transform: translateX(20px)
  }
}
  
.archive-article-title
  color:#333333
  display: inline-block

.archive-article-header:hover
  background-color: #f5f5f5

.archive-article-header:hover .archive-article-title
  color:#0090ff
  animation:fadeInRight 1s infinite 
  animation-iteration-count:1

.article
  background-color:#fff
  padding:2%

.article-header
  height: 50px
  line-height: 50px
  background-color:#f5f5f5
  border-left:3px solid #4bde7b

.article-header h1
  padding-left:20px
  color:#727272
  font-size:22px
  font-weight:bold

.article-header h1 a
  color:#727272

.article-date
  height: 60px
  line-height: 60px
  color:#666

.article-entry
  color:#555
  padding-bottom: 35px

.article-entry code
  color:red
  background-color:#f5f2f0
  border:1px solid #e2e2e2
  padding:0 5px

.article-entry p
  line-height: 26px

.article-entry a
  color:#f00

.article-entry h2, .article-entry h3
  font-size: 22px
  font-weight: bold
  margin:30px 0

.article-entry ul li
  line-height:30px;

.article-entry strong
  font-weight:bold
  color:red

.highlight
  background: #f4f4f4
  margin: 10px 0
  padding: 12px 15px
  overflow: auto
  color: #424242
  -webkit-border-radius: 3px
  border-radius: 3px
  line-height: 18px

.highlight .line
  line-height:24px
  font-size:12px
  color:#424242
.gutter
  display:none

/*toc*/
.toc-article
  background #eee
  border 1px solid #bbb
  border-radius 5px
  margin 0 0 0.3em 1.5em
  padding 1.2em 1em 0 1em
  max-width 28%

.toc-title
  font-size 120%

#toc
  line-height 1em
  font-size 0.9em
  float right
.toc
  padding 0
  margin 1em
  line-height 1.8em
li
  list-style-type none

.toc-child 
  margin-left 1em

.toc-number 
  color:#ccc
.toc-text
  color:#258fb8